	# Build Firefox for OSX:
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/privafox-release
ac_add_options --with-macos-sdk=/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX10.9.sdk
ac_add_options --enable-application=browser
ac_add_options --enable-official-branding
mk_add_options MOZ_MAKE_FLAGS="-j4"
ac_add_options --enable-installer
ac_add_options --disable-debug
ac_add_options --disable-tests
ac_add_options --disable-extensions
ac_add_options --enable-update-packaging
ac_add_options --disable-crashreporter
# ac_add_options --enable-update-channel=release