# Build Firefox for Window App:
# Common Section:
ac_add_options --enable-application=browser
ac_add_options --with-app-name=privafox
ac_add_options --with-branding=browser/branding/privafox
ac_add_options --disable-mochitest
ac_add_options --disable-mochitests
ac_add_options --disable-tests
ac_add_options --disable-ipdl-tests
ac_add_options --disable-crashreporter
mk_add_options AUTOCLOBBER=1
ac_add_options --enable-update-channel=release
ac_add_options --enable-official-branding
#Fix auto create mozilla folder
ac_add_options --disable-sandbox
ac_add_options --disable-system-extension-dirs
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/privafox-x32
# for X86
WIN32_REDIST_DIR=$VCINSTALLDIR/redist/x86/Microsoft.VC120.CRT

